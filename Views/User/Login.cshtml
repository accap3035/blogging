@model Blogging_Project.Models.ViewModels.UserLoginRequest
@{
}


<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Login</h1>
    </div>
</div>

<div class="container py-5">
    <form method="Post">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="mb-3">
            <label class="form-label">Email</label>
            <input type="text" class="form-control" id="email" name="email" asp-for="Email" />
        </div>
        <div class="mb-3">
            <label class="form-label">Password</label>
            <input type="password" class="form-control" id="password" name="password" asp-for="Password" />
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-dark">Login</button>
        </div>
    </form>
</div>