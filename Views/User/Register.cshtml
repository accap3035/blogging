@model Blogging_Project.Models.ViewModels.UserRegisterRequest
@{
}


<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Register New User</h1>
    </div>
</div>

<div class="container py-5">
    <form method="Post">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="mb-3">
            <label class="form-label">First Name</label>
            <input type="text" class="form-control" id="firstName" name="firstName" asp-for="FirstName"/>
        </div>
        <div class="mb-3">
            <label class="form-label">Last Name</label>
            <input type="text" class="form-control" id="lastName" name="lastName" asp-for="LastName"/>
        </div>
        <div class="mb-3">
            <label class="form-label">Email Address</label>
            <input type="text" class="form-control" id="email" name="email" asp-for="Email"/>
        </div>
        <div class="mb-3">
            <label class="form-label">Password</label>
            <input type="password" class="form-control" id="password" name="password" asp-for="Password"/>
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-dark">Submit</button>
        </div>
    </form>
</div>