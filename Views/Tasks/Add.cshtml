@model Blogging_Project.Models.ViewModels.TodoAddRequest
@{
}

<div class="text-center">
    <h1 class="display-4">Adding To-Do</h1>
</div>
<div class="container py-5">
    <form method="Post">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DeadlineDate">Deadline Date</label>
            <input asp-for="DeadlineDate" type="date" class="form-control" />
            <span asp-validation-for="DeadlineDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DeadlineTime">Deadline Time</label>
            <input asp-for="DeadlineTime" type="time" class="form-control" />
            <span asp-validation-for="DeadlineTime" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-dark">Submit</button>
        </div>
    </form>
</div>